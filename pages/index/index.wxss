.container{
  padding-bottom: 140rpx;
}
.item{
  width: 690rpx;
  height: 280rpx;
  position: relative;
  box-sizing: border-box;
   margin-top: 30rpx;
   border-radius: 20rpx;
   overflow: hidden;
}
.img{
  width: 100%;
  height: 100%;
}
.mask{
  width: 100%;
  height: 100%;
  background: #333;
  opacity: 0.5; 
  border-radius: 20rpx;
}
.content{
  position: absolute;
  width: 380rpx;
  height: 40rpx; 
  border-radius: 20rpx;
  text-align: center;
  bottom: 20rpx;
  left: 50rpx; 
  font-size: 26rpx;
  color: #fff;
}
.text{
  position: absolute;
  left: 30rpx;
  top: 2rpx;
}
.bottom{
  position: fixed;
  display: flex;
  width: 100%;
  justify-content: space-around;
  bottom: 0;
  height: 100rpx;
  box-shadow: 0px 0px 5px #888888;
}
.btn{
  width: 100%;
  border-radius: 0;
  padding: 0;
  border: none;
  background: #fff;
  font-size: 36rpx;
  color: #9b9b9b;
  line-height:100rpx;

}
.btn::after{
  border: none;
}
.btnChecked{
  color: #24d9ad;  
  border-bottom: 5rpx solid #24d9ad
}
